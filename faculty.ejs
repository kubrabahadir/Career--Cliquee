<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= facultyName %> Faculty - <%= universityName %></title>
  <link rel="stylesheet" href="/styles/universities.css"> <!-- Your default stylesheet -->
</head>
<body>
  <header>
    <h1><%= universityName %> - <%= facultyName %> Faculty</h1>
    <nav>
      <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/universities">Universities</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h2>Details for <%= facultyName %> Department</h2>

    <h3>Members of the <%= facultyName %> Department</h3>
    <ul>
      <% users.forEach(function(user) { %>
        <li>
          <strong>Name:</strong> <%= user.firstName %> <%= user.lastName %> <br>
          <strong>Email:</strong> <%= user.email %> <br>
          <strong>Profile Link:</strong> <a href="<%= user.profileLink %>" target="_blank"><%= user.profileLink %></a> <br>
          <strong>University:</strong> <%= user.education.institution %> <br>
          <strong>Faculty:</strong> <%= user.education.faculty %> <br>
          <strong>Status:</strong> <%= user.education.status === 'student' ? 'Student' : 'Alumni' %> <br>
          <strong>Mentor Interest:</strong> <%= user.mentorInterest ? 'Yes' : 'No' %> <br>
          <strong>Company:</strong> <%= user.currentJob.company %> <br>
          <strong>Position:</strong> <%= user.currentJob.position %> <br>
        </li>
      <% }); %>
    </ul>
  </main>
  <footer>
    <p>&copy; 2024 Your Company</p>
  </footer>
</body>
</html>
